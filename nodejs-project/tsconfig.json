{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"] 
  },

  "ts-node": {
    "esm": true
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./*.ts", "__test__"]
}